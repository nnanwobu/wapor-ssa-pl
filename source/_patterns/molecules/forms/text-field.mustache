<div class="c-field {{ styleModifier }}">

	<label for="{{ id }}" class="c-field__label">{{ label }}</label>

    <div class="c-field__body">

        <input type="{{ type }}" id="{{ id }}" class="c-input" placeholder="{{ placeholder }}" value="{{ value }}" {{#required}}required="required"{{/ required}} {{#disabled }}disabled{{/ disabled }} {{#readOnly }}readonly{{/ readOnly  }} name="{{name}}"/>
		
    </div><!-- end c-field__body -->

    {{#fieldNote }}
    <div class="c-field__note">{{{ fieldNote }}}</div>
    {{/ fieldNote }}

</div><!-- end c-field -->
